-if notice
  %div{class:"alert alert-success"}
    %button{:class=>"close", :"data-dismiss"=>:"alert"}
      x
    =notice
- for app in @application

  %table{class:"table table-bordered", id:"show-recoreds", style:"width:1000px; margin: 0 auto;"}
    %tr
      %th ID
      %td= app.id
    %tr
      %th Project:
      %td= link_to app.project_name, project_path(app.project_id)
    %tr
      %th Product name:
      %td= app.product_name
    %tr
      %th Bundle identifier:
      %td= app.bundle_identifier
    %tr
      %th Bundle version:
      %td= app.bundle_version
    %tr
      %th Relative path:
      %td= app.relative_path
    %tr
      %th Title:
      %td= app.title

%div{class:"well well-small well-width"}  
  .btn-group
    = link_to 'Edit', edit_application_path(app), class:"btn"
    = link_to 'Back', applications_path, class:"btn"
