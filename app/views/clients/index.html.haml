.navbar
  .navbar-inner
    = link_to "Home", admin_path, class:"brand"
    %ul{class:"nav"}
      %li{id:"clients-nav"}
        = link_to "Clients", clients_path
      %li{id:"company-nav"}
        = link_to "Companies", companies_path
      %li{id:"manager-nav"}
        = link_to "Managers", managers_path
      %li{id:"developers-nav"}
        = link_to "Developers", developers_path
      %li{id:"projects-nav"}
        = link_to "Projects", projects_path
      %li{id:"app-nav"}
        = link_to "Applications", applications_path



-if notice
  %div{class:"alert alert-success"}
    %button{:class=>"close", :"data-dismiss"=>:"alert"}
      x
    =notice

%div{class:"well well-small", align:"center"}
  %h4 Listing clients

%table{class:"table table-striped table-bordered", style:"width:1200px; margin: 0 auto;"}
  %tr
    %th ID
    %th Company Name
    %th Name
    %th Email
    %th Handle
    %th Actions


  - @clients.each do |client|
    %tr
      %td= link_to client.id, client
      %td= check_path(client.company_name, client.company_id, path:"companies").html_safe
      %td= client.name
      %td= client.email
      %td= link_to client.handle, handle_path(client.id)
      %td
        %div{class:"btn-group"}
          =link_to "Show", client, class:"btn"
          %button{class:"btn dropdown-toggle", :"data-toggle"=>:"dropdown"}
            %span{class:"caret"}
          %ul{class:"dropdown-menu"}
            %li= link_to 'Show', client
            %li= link_to 'Edit', edit_client_path(client)
            %li= link_to 'Destroy', client, :confirm => 'Are you sure?', :method => :delete

%br
%div{class:"well well-small", align:"center"}
  = link_to 'New Client', new_client_path, class:"btn"
