:css
  body{backgroud-color:red;}
  .add{color:green;}
  .add:hover{color:red;}
  #hh{letter-spacing:0.5px;}
.modal.hide.fade#new-company
  .modal-header
    .form-notice
    %button{class:"close", :"data-dismiss"=>:"modal"}
      Ã—
    %h3 Add new company.

  .modal-body
    = render 'companies/form-remote'

%table{class:"table", style:"width:1000px; margin: 0 auto;"}
  = form_for @client do |f|
    = error_field(@client, 950)
    
    %tr
      %td
        Select company
      %td  
        = f.select("company_id", Company.all.collect {|p| [ p.name, p.id ] },  {:include_blank => 'Please, select company!'})
        &nbsp;
        = link_to "Add new company", '#', id:"get-new-company"
    %tr
      %td
        = f.label :name
      %td
        = f.text_field :name
    %tr
      %td
        = f.label :email
      %td
        = f.text_field :email
    %tr
      %td 
        = f.label :handle
      %td
        = f.text_field :handle
        .handle-variant

    %tr
      %td{colspan:"2"}
        = f.submit 'Save', class:"btn"
