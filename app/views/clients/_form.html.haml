%div{class:"modal hide fade", id:"new-company"}
  .modal-header
    #form-notice
    %button{class:"close", :"data-dismiss"=>:"modal"}
      Ã—
    %h3 Add new company.

  %div{class:"modal-body"}
    = render 'companies/form-remote'

%table{class:"table"}
  = form_for @client do |f|
    -if @client.errors.any?
      %div{class:"alert alert-error"}
        %a{class:"close", :"data-dismiss"=>:"alert", href:"#"}
          &times;
        %h3= "#{pluralize(@client.errors.count, "error")} prohibited this post from being saved:"
        %ul
          - @client.errors.full_messages.each do |msg|
            %li= msg
    
    %tr
      %th
        Select company
      %td  
        = f.select("company_id", Company.all.collect {|p| [ p.name, p.id ] },  {:include_blank => 'None'})
        %br
        = link_to "add new company", '#', id:"get-new-company"
    %tr
      %th
        = f.label :name
      %td
        = f.text_field :name
    %tr
      %th
        = f.label :email
      %td
        = f.text_field :email
    %tr
      %th 
        = f.label :handle
      %td
        = f.text_field :handle
    %tr
      %td{colspan:"2"}
        = f.submit 'Save', class:"btn"
