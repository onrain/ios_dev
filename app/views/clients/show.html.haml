-if notice
  %div{class:"alert alert-success"}
    %button{:class=>"close", :"data-dismiss"=>:"alert"}
      x
    =notice

%table{class:"table table-bordered", id:"show-recoreds", style:"width:1000px; margin: 0 auto;"}
  - for client in @client
    %tr
      %th
        ID
      %td
        = client.id
    %tr
      %th
        Company name:
      %td
        = link_to check_path(client.company_name, client.company_id, path:"companies").html_safe
    %tr
      %th
        Name:
      %td
        = client.name
    %tr  
      %th
        Email:
      %td
        = client.email
    %tr  
      %th
        Handle:
      %td
        = client.handle
%div{class:"well well-small well-width"}  
  .btn-group
    = link_to 'Edit', edit_client_path(client), class:"btn"
    = link_to 'Back', clients_path, class:"btn"
