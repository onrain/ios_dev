-if notice
  %div{class:"alert alert-success"}
    %button{:class=>"close", :"data-dismiss"=>:"alert"}
      x
    =notice

%table{class:"table table-bordered", id:"show-recoreds"}
  - for client in @client
    %tr
      %th
        ID
      %td
        = client.id
    %tr
      %th
        Company name:
      %td
        = link_to check_path(client.company_name, client.company_id, path:"companies").html_safe
    %tr
      %th
        Name:
      %td
        = client.name
    %tr  
      %th
        Email:
      %td
        = client.email
    %tr  
      %th
        Handle:
      %td
        = link_to client.handle, handle_path(client.id)
%div{class:"well well-small"}  
  .btn-group
    = link_to 'Edit', edit_client_path(client), class:"btn"
    = link_to 'Back', back(clients_path), class:"btn"
