-if notice
  %div{class:"alert alert-success"}
    %button{:class=>"close", :"data-dismiss"=>:"alert"}
      x
    =notice
-for dev in @developer
  %table{class:"table table-bordered", id:"show-recoreds"}
    %tr
      %th ID
      %td=dev.id
    %tr
      %th Name:
      %td= dev.name
    %tr
      %th Manager:
      %td= check_path(dev.manager_name, dev.manager_id, path:"managers").html_safe
    %tr
      %th Email:
      %td= dev.email
    %tr
      %th Personal email:
      %td= dev.personal_email
%div{class:"well well-small"}  
  .btn-group
    = link_to 'Edit', edit_developer_path(dev), class:"btn"        
    = link_to 'Back', developers_path, class:"btn"
