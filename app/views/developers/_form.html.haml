%table.table{style:"width:1000px; margin: 0 auto;"}
  = form_for @developer do |f|
    = error_field(@developer,970)
  
    %tr
      %th{style:"width:60%;"}= f.label :name
      %td= f.text_field :name
    %tr
      %th= f.label :manager_id
      %td= f.select(:manager_id, Manager.all.collect {|p| [ p.name, p.id ] },  {:include_blank => 'Please, select manager'})
    %tr
      %th= f.label :email
      %td= f.text_field :email
    %tr
      %th= f.label :personal_email
      %td= f.text_field :personal_email
    %tr
      %td{colspan:"2"}
        .btn-group.pull-right.padd-right
          = f.submit 'Save', class:"btn"
        .btn-group.pull-left
          = link_to "Back", :back, class:"btn"
