= form_for @company, remote:true, method:"post", id:"form-new-company", validate: true do |f|
  -if @company.errors.any?
    #error_explanation
      %h2= "#{pluralize(@company.errors.count, "error")} prohibited this company from being saved:"
      %ul
        - @company.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name, id:"cname"
  .field
    = f.label :website
    = f.text_field :website, id:'cwebsite'
  .actions
    = f.submit 'Save', id:"new-com"
